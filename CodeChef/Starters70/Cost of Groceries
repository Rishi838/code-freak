#include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
	scanf("%d",&t);
	while(t--)
	{
	    int n,x;
	    scanf("%d %d",&n,&x);
	    int a[n],b[n];
	    for(int i=0;i<n;i++)
	    scanf("%d",&a[i]);
	    for(int i=0;i<n;i++)
	    scanf("%d",&b[i]);
	    int c=0;
	    for(int i=0;i<n;i++)
	    if(a[i]>=x)
	    c+=b[i];
	    printf("%d\n",c);
	}
	return 0;
}

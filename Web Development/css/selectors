        /*This is a comment in css*/
        /*ID selector*/
        #div_element{
            color: red;
        }
         /*class selector*/
        .class_element{
            color:blue;
        }
         /*Group selector*/
        footer,span{
            background-color: pink;
            color: brown;
            border: 2px solid black;
        }
         /*Elememt selector*/
        p{
            background-color: orange;
            color: black;
        }

    </style>

            width: 500px;
        }

        input[type="text"] {
            display: block;
            /*It targets a qarticular attribute*/
            border: 1px solid aquamarine;
        }

        a[target] {
            /*Ye wahan lagegi jahan target set hai  sirf  _blank ke liye nhi hoga*/
            text-decoration: none;
            color: blueviolet;
        }
        /* nth child pseudoselectors */
        li:nth-child(2){
            font-weight: bold;
        }
        li:nth-child(3n)
        {
            font-style: italic;
        }
    </style>

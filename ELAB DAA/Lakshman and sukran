#define p   for(int i=0;i<x;i++) {  for(int j=i+1;j<x;j++) {   int b=g(i,j,arr);  int a=(i-j)*(i-j) + b*b; ans=min(ans, a); } }
using namespace std;
int g(int i,int j,int arr[])
{
    int sum=0;
    for(int a=min(i,j)+1;a<max(i,j)+1;a++)
    sum+=arr[a];
    return sum;
}

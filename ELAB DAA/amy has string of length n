#include <bits/stdc++.h>
using namespace std;
int main()
{
    string s;
    cin>>s;
    int ans=INT_MIN,n=s.size();
    for(int i=0;i<n;i++)
    {
        for(int j=i+1;j<n;j++)
        {
            if(s[i]!=s[j])
            ans=max(ans,j-i);
        }
    }
    cout<<ans;
	return 0;
	cout<<"<char>";
}

//Half Pyramid hollow inverted 
/*
*****
*  *
* *
**
*
 */
#include<iostream>
using namespace std;
int main()
{
int l;
cin>>l;
for (int i = 0; i < l; i++)
{
    for (int j = 0; j <l-i; j++)
    {
       if (i==0 || i==l-1)
       {
           cout<<"* ";
       }
       else
       {
           if (j==0 || j==l-i-1)
           {
               cout<<"* ";
           }
           else
           {
               cout<<"  ";
           }
           
       }
       
    }
    cout<<endl;
}

    return 0;
}

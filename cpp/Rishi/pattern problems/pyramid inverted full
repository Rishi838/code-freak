// inverted Full Pyramid  
/*
*****
 ***
  *
 */
#include<iostream>
using namespace std;
int main()
{
int l;
cin>>l;
for (int i = 0; i < l; i++)
{
   for (int j = 0; j < 2*l-1; j++)
   {
       if (j<i)
       {
           cout<<"  ";
       }
       else if(j<l)
       {
           cout<<"* ";
       }

       if (j>=2*l-1-i)
       {
           cout<<"  ";
       }
       else if (j>=l)
       {
           cout<<"* ";
       }
       
       
   }
   
    cout<<endl;
}

    return 0;
}

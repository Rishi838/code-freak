#include <bits/stdc++.h>
using namespace std;
void read(int a){}
void sol(){
    int MAXN=1,i=0;
    int s[MAXN];
    read(s[i]);
}
int main()
{
  int t,n,a;
  cin>>t;
  while(t--)
  {
      cin>>n;
      map<int,int> mp;
      for(int i=0;i<n;i++)
     {
         cin>>a;
      mp[a]++;
     }
     a=1;
     int sum=0;
     for(auto i: mp){
     sum += a*i.second;
     a++;}
     cout<<sum<<endl;
  }
	return 0;
}

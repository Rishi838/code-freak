class Solution {
public:
    string mergeAlternately(string a, string b) {
        string s;
        cout<<a.size()<<" "<<b.size();
        for(int i=0;i<max(a.size(),b.size());i++)
        {
            if(i<a.size())
                s+=a[i];
            if(i<b.size())
            s+=b[i];
        }
        return s;
    }
};
